<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F8FF"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:text="Put Your Orders"
        android:textAllCaps="true"
        android:textColor="#033089"
        android:textSize="28sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/order1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:background="#E6EEFF"
        android:elevation="3dp"
        android:hint="Enter Your Order 1"
        android:paddingHorizontal="12dp"
        android:paddingVertical="18dp" />

    <EditText
        android:id="@+id/order2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:background="#E6EEFF"
        android:elevation="3dp"
        android:hint="Enter Your Order 2"
        android:paddingHorizontal="12dp"
        android:paddingVertical="18dp" />

    <EditText
        android:id="@+id/order3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:background="#E6EEFF"
        android:elevation="3dp"
        android:hint="Enter Your Order 3"
        android:paddingHorizontal="12dp"
        android:paddingVertical="18dp" />

    <Button
        android:id="@+id/btnOrdernow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:paddingVertical="10dp"
        android:text="Order now"
        android:textAllCaps="true"
        android:textSize="24sp" />


</LinearLayout>